@model IEnumerable<WorkoutTrackingApp.ViewModels.ExerciseViewModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h2>Manage Exercises</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Target Muscle Group</th>
            <th>Equipment Required</th>
            <th>Difficulty</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var exercise in Model)
        {
            <tr>
                <td>@exercise.Name</td>
                <td>@exercise.Description</td>
                <td>@exercise.TargetMuscleGroup</td>
                <td>@exercise.EquipmentRequired</td>
                <td>@exercise.Difficulty</td>
                <td>
                    <!-- Replace with actual paths to your action methods -->
                    <a href="@Url.Action("Edit", "Exercises", new { id = exercise.Id })">Edit</a> |
                    <a href="@Url.Action("Details", "Exercises", new { id = exercise.Id })">Details</a> |
                    <a href="@Url.Action("Delete", "Exercises", new { id = exercise.Id })"
                       onclick="return confirm('Are you sure you want to delete this?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" href="@Url.Action("Create", "Exercises")">Add New Exercise</a>
