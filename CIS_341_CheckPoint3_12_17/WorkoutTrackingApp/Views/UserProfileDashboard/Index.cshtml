@model WorkoutTrackingApp.ViewModels.UserDashboardViewModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    <h1>UserDashBoard</h1>
    ViewData["Title"] = "User Dashboard";   
}

<h2> Welcome. @Model.UserName!</h2>

<div class = "user-details">
    <p>Email: @Model.Email</p>
    @if (Model.IsSubscribed)
    {
        <p>Subscription Status: Active until @Model.SubscriptionEndDate.ToString("MM/dd/yyyy")</p>
    }
    else
    {
        <p>Subscription Status: Not Subscribed</p>
    }
</div>

@if (Model.RecentWorkouts.Any())
{
    <h3>Recent Workouts</h3>
    <ul>
        @foreach (var workout in Model.RecentWorkouts)
        {
            @*<li>
                @workout.Name - @workout.Description

            </li>*@
            <h3>@workout.Name</h3>
            <p>@workout.Description</p>
            <p>Completed on: @workout.DateCompleted?.ToString("MM/dd/yyyy")</p>
        }

    </ul>
}

<div class="messaging-links">
    <a href="@Url.Action("SendMessage", "UserProfileDashboard")" class="btn btn-primary">Send Message to Trainer</a>
    <a href="@Url.Action("ViewMessages", "UserProfileDashboard")" class="btn btn-secondary">View Messages</a>
</div>


<a class="btn btn-primary" asp-controller="Workouts" asp-action="Create">Create New Workout</a>
<br><br>
<a class="btn btn-primary" asp-controller="Workouts" asp-action="Index">View Workouts</a>
<br><br>
<a class="btn btn-primary" asp-controller="UserProfileDashboard" asp-action="SelectedWorkouts">Track A Workout</a>

<a asp-page="/SubscriberProfile" class="btn btn-primary">View your Profile</a>






