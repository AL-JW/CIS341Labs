@model IEnumerable<WorkoutTrackingApp.ViewModels.SubscriberViewModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h2>Subscribers</h2>

<ul>
    @foreach (var subscriber in Model)
    {
        <li>
            <img src="@subscriber.ProfileUrl" alt="Profile Picture">
            <div>@subscriber.UserName</div>
            <div>Subscription Start: @subscriber.SubscriptionStartDate.ToString("d")</div>
            <div>Status: @subscriber.SubscriptionStatus</div>
            <div>Completed Workouts: @subscriber.NumberOfCompletedWorkouts</div>
        </li>
    }
</ul>
